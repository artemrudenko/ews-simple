{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "types": [
      "node",
      "jest"
    ],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": [
    "lib",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "**/*.spec.ts"
  ]
}